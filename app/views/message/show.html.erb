<button class='btn btn-info btn-lg bottom-flat'>
    Conversation with 
    <% if current_user == @message.sender %>
        <%= @message.recipient.available_name %>
    <% else %>
        <%= @message.sender.available_name %>
    <% end %>
    </button>
<div class="well message">
    <dl class="dl-horizontal">
        <dt>Started by: </dt>
        <dd><%= link_to @message.sender.available_name, user_show_path(@message.sender) %></dd>

        <dt>To: </dt>
        <dd><%= link_to @message.recipient.available_name, user_show_path(@message.recipient) %></dd>

        <dt>Subject: </dt>
        <dd><%= @message.subject %></dd>

        <dt>Body: </dt>
        <dd><%= @message.content %></dd>
    </dl>

</div>
<% @conversations.each do |conversation| %>
    <div class="well">
    <dl class="dl-horizontal">
        <dt>From: </dt>
        <dd><%= link_to conversation.sender.available_name, user_show_path(conversation.sender) %></dd>
        <dt>To: </dt>
        <dd><%= link_to conversation.recipient.available_name, user_show_path(conversation.recipient) %></dd>

        <dt>Subject: </dt>
        <dd><%= conversation.subject %></dd>

        <dt>Body: </dt>
        <dd><%= conversation.content %> on 
        <%= conversation.created_at.strftime("%a, %e %b %Y %H:%M:%S %z") %></dd>
    </dl>
    </div>
<% end %>
<button class='btn btn-info btn-lg bottom-flat'>Reply</button>
<div class='well'>
<% if @reply.errors.any? %>
    <p class='alert alert-danger'>Errors</p>
    <% @reply.errors.full_messages.each do |e| %>
        <p class='text-danger'><%= e %></p>
    <% end %>
<% end %>
<%= form_for @reply, url: {action: "send_reply"}, html: {class: "nifty_form"} do |f| %>
    <%= f.text_field :subject, class: 'form-control', placeholder: 'Subject' %>
    <br />
    <%= f.text_area :content, size: "60x12", class: 'form-control', placeholder: 'Body'   %>
    <br />
    <%= f.submit "Submit", class: "btn btn-primary"%>

<% end %>
</div>

