<button class='btn btn-info btn-lg bottom-flat'>New Message</button>
<div class='well'>
<% if @message.errors.any? %>
    <p class='alert alert-danger'>Errors</p>
    <% @message.errors.full_messages.each do |e| %>
        <p class='text-danger'><%= e %></p>
    <% end %>
<% end %>
<%= form_for @message, url: {action: "send_reply"}, html: {class: "nifty_form"} do |f| %>
    <%= f.text_field :subject, class: 'form-control', placeholder: 'Subject' %>
    <br />
    <%= f.text_area :content, size: "60x12", class: 'form-control', placeholder: 'Body'   %>
    <br />
    <%= f.submit "Create", class: "btn btn-primary"%>

<% end %>
</div>

