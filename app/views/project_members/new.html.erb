<button class='btn btn-info btn-lg bottom-flat'>Add Members to <%= @project.name %></button>
<div class='well'>
    <div class="add-box">
        <div class="from-box small-box">
            <div class="box-header">Non-members</div>
            <div class="box-content">
            <% @remaining_members.each do |user| %>
                <div class="user" uid="<%= user.id %>">
                    <%= user.email %>
                </div>
            <% end %>
            </div>
        </div>
        <div id="arrow-box">
            <img id="right-arrow" src='<%= image_path("right-arrow.png") %>' data-frm="from-box" data-to="to-box" />
            <img id="left-arrow" src='<%= image_path("left-arrow.png") %>' data-frm="to-box" data-to="from-box" />
        </div>

        <div class="to-box small-box">
            <div class="box-header">Members</div>
            <div class="box-content">
            <% @members.each do |member| %>
                <div class="user old-members" uid="<%= member.id %>" old='yes' >
                    <%= member.email %>
                </div>
            <% end %>
            </div>
        </div>
        <div class="clearfix"></div>
        <button id="submit-btn" class="btn btn-primary btn-lg">Add</button>
    </div>
</div>

<form id="add-members" action="" method="post">
    <input type=hidden name="authenticity_token" value="<%= form_authenticity_token %>" />
    <input type="hidden" name="users" />
</form>
