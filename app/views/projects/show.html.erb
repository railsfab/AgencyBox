<%= render "shared/project_menu" %>
<div class='well'>
    <dl class="dl-horizontal">
        <dt>Name: </dt>
        <dd><%= @project.name %></dd>

        <dt>Description: </dt>
        <dd><%= @project.description %></dd>
    </dl>

    <% if current_user.has_role? :admin %>
        <%= link_to :Edit, edit_project_path(@project.slug) %>
    <% end %>
</div>

<button class='btn btn-info btn-lg bottom-flat'>Members</button>
<div class='well'>
<% @project.members.each do |member| %>

    <%= link_to member.available_name, user_path(member) %>

<% end %>
<% if @project.members.count.zero? %>
    No members for this project !
<% end %>
</div>
