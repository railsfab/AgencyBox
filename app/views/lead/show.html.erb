
<button class='btn btn-info btn-lg bottom-flat'>Lead Details</button>
<div class='well col-md-4 no-float'>
    <dl class='dl-horizontal'>
        <dt>First Name: </dt>
        <dd><%= @lead.first_name %></dd>

        <dt>Last Name: </dt>
        <dd><%= @lead.last_name %></dd>

        <dt>Email:</dt>
        <dd><%= @lead.email %></dd>

        <dt>Description:</dt>
        <dd><%= @lead.description %></dd>

        <dt>Source: </dt>
        <dd><%= @lead.source.name %></dd>

        <dt>Stage: </dt>
        <dd><%= @lead.stage_display %></dd>
    </dl>
    <% if current_user.has_role? :admin %>
    <%= link_to :Edit, :lead_edit, class: "btn btn-primary" %>
    <% end %>
</div>
