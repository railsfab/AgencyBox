<button class='btn btn-info btn-lg bottom-flat'>Leave Category Details</button>
<div class='well'>
    <dl class='dl-horizontal'>
        <dt>Name: </dt>
        <dd><%= @category.name %></dd>

        <dt>Description: </dt>
        <dd><%= @category.description %></dd>
    </dl>
    <% if current_user.has_role? :admin %>
    <%= link_to :Edit, leave_category_edit_path(@category) %>
    <% end %>
</div>
