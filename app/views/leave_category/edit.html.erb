<button class='btn btn-info btn-lg bottom-flat'>Edit Leave Category</button>
<div class='well'>
<% if @category.errors.any? %>
    <p class='alert alert-danger'>Errors</p>
    <% @category.errors.full_messages.each do |e| %>
        <p class='text-danger'><%= e %></p>
    <% end %>
<% end %>
<%= form_for @category, url: {action: "modify"}, html: {class: "nifty_form"} do |f| %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
    <br />
    <%= f.text_area :description, size: "60x12", class: 'form-control', placeholder: 'Description'   %>
    <br />
    <%= f.submit "Edit", class: "btn btn-primary"%>

<% end %>
</div>

