<button class='btn btn-info btn-lg bottom-flat'>Leave Categories</button>
<% @categories.each do |category| %>
    <div class='well'>
        <%= link_to category.name, leave_category_show_path(category) %>
    </div>
<% end %>
<% if @categories.empty? %>
    <div class="well">
        No Categories yet, please create them.
    </div>
<% end %>
