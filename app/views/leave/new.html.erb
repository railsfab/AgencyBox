<button class='btn btn-info btn-lg bottom-flat'>New Leave</button>
<div class='well'>
<% if @leave.errors.any? %>
    <p class='alert alert-danger'>Errors</p>
    <% @leave.errors.full_messages.each do |e| %>
        <p class='text-danger'><%= e %></p>
    <% end %>
<% end %>
<%= form_for @leave, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
    <%= f.text_field :start_date, class: 'form-control', placeholder: 'From', autocomplete: "off" %>
    <br />
    <%= f.text_field :end_date, class: 'form-control', placeholder: 'To', autocomplete: "off" %>
    <br />
    <%= f.text_area :reason, size: "60x12", class: 'form-control', placeholder: 'Reason'   %>
    <br />
    <%= f.select :category_id, {Categories: @leave.categories}, {}, {class: 'form-control'} %>
    <br />
    <%= f.submit "Create", class: "btn btn-primary"%>

<% end %>
</div>


<% content_for :extra_css do %>
    <link href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" rel="stylesheet" type="text/css" />
<% end %>

<% content_for :extra_js do %>
<script type="text/javascript" src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
<% end %>
